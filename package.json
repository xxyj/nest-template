{
  "name": "bff",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "cross-env NODE_ENV=local && nodemon",
    "start:debug": "cross-env NODE_ENV=local && nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:dev": "npm run build && cross-env NODE_ENV=dev && forever start dist/main.js",
    "start:test": "npm run build && cross-env NODE_ENV=test && forever start dist/main.js",
    "start:production-yq": "npm run build && cross-env NODE_ENV=production-yq && forever start dist/main.js",
    "start:production-bj": "npm run build && cross-env NODE_ENV=production-bj && forever start dist/main.js",
    "stop": "forever stop dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "cpTest": "clinic doctor -- nodemon",
    "test": "jest",
    "doc": "npx compodoc -p tsconfig.json -s",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.1.2",
    "@types/ffi": "^0.2.2",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.9.1",
    "compression": "^1.7.4",
    "connect-history-api-fallback": "^1.6.0",
    "cookie-parser": "^1.4.4",
    "cross-env": "^5.2.0",
    "csurf": "^1.10.0",
    "express-rate-limit": "^3.5.0",
    "fast-json-stringify": "^1.15.2",
    "forever": "^1.0.0",
    "helmet": "^3.18.0",
    "ioredis": "^4.9.0",
    "js-to-java": "^2.6.1",
    "mysql": "^2.17.1",
    "node-uuid": "^1.4.8",
    "node-zookeeper-dubbo": "^3.0.15",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.0.2",
    "typeorm": "^0.2.18",
    "winston": "^3.2.1",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.9",
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.14",
    "@types/node": "^10.14.7",
    "@types/supertest": "^2.0.7",
    "easy-monitor": "^2.2.7",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "typescript": "^3.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}